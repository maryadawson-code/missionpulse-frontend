  "lastUpdated": "2026-01-23T00:00:00Z",
  "description": "MissionPulse Role-Based Access Control Configuration - Invisible RBAC with Progressive Disclosure",
  
  "designPrinciples": {
    "invisibleRBAC": "Components that users cannot access MUST NOT render in the DOM",
    "progressiveDisclosure": "Complexity is revealed only when contextually relevant",
    "zeroFriction": "No 'Access Denied' errors - unavailable features simply don't exist in the user's view",
    "securityByDefault": "External users default to minimum viable access with CUI watermarking enforced"
  },

  "uiComplexityLevels": {
    "simplified": {
      "description": "Minimal interface for focused task completion",
      "showAdvancedFilters": false,
      "showAnalyticsDashboard": false,
      "showAdminSettings": false,
      "maxVisibleNavItems": 4,
      "defaultView": "assigned_tasks"
    },
    "standard": {
      "description": "Full functional interface for daily proposal work",
      "showAdvancedFilters": true,
      "showAnalyticsDashboard": false,
      "showAdminSettings": false,
      "maxVisibleNavItems": 7,
      "defaultView": "pipeline"
    },
    "advanced": {
      "description": "Complete interface with analytics and configuration",
      "showAdvancedFilters": true,
      "showAnalyticsDashboard": true,
      "showAdminSettings": false,
      "maxVisibleNavItems": 10,
      "defaultView": "dashboard"
    },
    "admin": {
      "description": "Full administrative access including system configuration",
      "showAdvancedFilters": true,
      "showAnalyticsDashboard": true,
      "showAdminSettings": true,
      "maxVisibleNavItems": 12,
      "defaultView": "admin_dashboard"
    }
  },

